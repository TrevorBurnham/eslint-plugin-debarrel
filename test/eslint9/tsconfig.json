{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@test/barrel": ["./fixtures/barrel"],
      "@test/barrel/*": ["./fixtures/barrel/*"]
    }
  },
  "include": ["./fixtures/**/*.ts"],
  "exclude": ["node_modules", "test.js", ".eslintrc.cjs"]
}
