{
  "name": "eslint-plugin-debarrel",
  "version": "0.1.0",
  "description": "ESLint plugin to transform barrel imports into direct imports",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "format": "eslint . --fix && prettier . --log-level warn --write",
    "test": "vitest",
    "release": "np"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "barrel",
    "imports"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@typescript-eslint/rule-tester": "^8.26.1",
    "eslint": "^8.57.0",
    "np": "^10.2.0",
    "prettier": "^3.5.3",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "eslint": "^8.0.0"
  }
}
