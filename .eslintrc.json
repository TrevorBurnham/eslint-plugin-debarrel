{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "plugins": ["@typescript-eslint"],
      "parser": "@typescript-eslint/parser",
      "extends": ["plugin:@typescript-eslint/recommended"]
    }
  ],
  "root": true,
  "env": {
    "node": true,
    "es2020": true
  },
  "ignorePatterns": ["dist/", "test/eslint8/", "test/eslint9/"]
}
